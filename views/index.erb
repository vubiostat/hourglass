  $(function() {
    $('#tabs').tabs();
    $('#new-activity-form .activity-name').focus(function() {
      var obj = $(this);
      if (obj.val() == "Activity") {
        obj.val('');
      }
      obj.removeClass('empty');
    }).blur(function() {
      var obj = $(this);
      if (!obj.val()) {
        obj.val('Activity');
        obj.addClass('empty');
      }
    }).blur();

    $('#new-activity-form .activity-tags').focus(function() {
      var obj = $(this);
      if (obj.val() == "Tags") {
        obj.val('');
      }
      obj.removeClass('empty');
    }).blur(function() {
      var obj = $(this);
      if (!obj.val()) {
        obj.val('Tags');
        obj.addClass('empty');
      }
    }).blur();
  });

